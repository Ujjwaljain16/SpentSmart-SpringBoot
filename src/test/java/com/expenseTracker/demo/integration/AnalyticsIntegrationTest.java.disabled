package com.expenseTracker.demo.integration;

import com.expenseTracker.demo.dto.request.ExpenseRequest;
import com.expenseTracker.demo.dto.request.RegisterRequest;
import com.expenseTracker.demo.dto.response.AuthResponse;
import com.fasterxml.jackson.databind.ObjectMapper;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.autoconfigure.web.servlet.AutoConfigureMockMvc;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.http.MediaType;
import org.springframework.test.web.servlet.MockMvc;
import org.springframework.test.web.servlet.MvcResult;

import java.math.BigDecimal;
import java.time.LocalDate;
import java.util.UUID;

import static org.springframework.test.web.servlet.request.MockMvcRequestBuilders.*;
import static org.springframework.test.web.servlet.result.MockMvcResultMatchers.*;

@SpringBootTest
@AutoConfigureMockMvc
class AnalyticsIntegrationTest {

    @Autowired
    private MockMvc mockMvc;

    @Autowired
    private ObjectMapper objectMapper;

    private String authToken;
    private UUID categoryId;

    @BeforeEach
    void setup() throws Exception {
        // Register and login
        RegisterRequest registerRequest = new RegisterRequest();
        registerRequest.setEmail("analytics-test-" + System.currentTimeMillis() + "@example.com");
        registerRequest.setPassword("Password123");
        registerRequest.setFullName("Analytics Test User");

        MvcResult result = mockMvc.perform(post("/api/auth/register")
                        .contentType(MediaType.APPLICATION_JSON)
                        .content(objectMapper.writeValueAsString(registerRequest)))
                .andReturn();

        AuthResponse authResponse = objectMapper.readValue(
                result.getResponse().getContentAsString(), AuthResponse.class);
        authToken = authResponse.getToken();

        // Get first category ID
        MvcResult categoryResult = mockMvc.perform(get("/api/categories")
                        .header("Authorization", "Bearer " + authToken))
                .andReturn();

        String categoryJson = categoryResult.getResponse().getContentAsString();
        categoryId = UUID.fromString(objectMapper.readTree(categoryJson).get(0).get("id").asText());

        // Create test expenses
        createTestExpenses();
    }

    private void createTestExpenses() throws Exception {
        for (int i = 0; i < 5; i++) {
            ExpenseRequest request = new ExpenseRequest();
            request.setCategoryId(categoryId);
            request.setAmount(new BigDecimal("" + (i * 50 + 100)));
            request.setDescription("Test expense " + i);
            request.setExpenseDate(LocalDate.now().minusDays(i));
            request.setPaymentMethod("CARD");

            mockMvc.perform(post("/api/expenses")
                    .header("Authorization", "Bearer " + authToken)
                    .contentType(MediaType.APPLICATION_JSON)
                    .content(objectMapper.writeValueAsString(request)));
        }
    }

    @Test
    void shouldGetMonthlySummary() throws Exception {
        int currentMonth = LocalDate.now().getMonthValue();
        int currentYear = LocalDate.now().getYear();

        mockMvc.perform(get("/api/analytics/monthly-summary")
                        .header("Authorization", "Bearer " + authToken)
                        .param("month", String.valueOf(currentMonth))
                        .param("year", String.valueOf(currentYear)))
                .andExpect(status().isOk())
                .andExpect(jsonPath("$.totalExpenses").exists())
                .andExpect(jsonPath("$.expenseCount").exists())
                .andExpect(jsonPath("$.averageExpense").exists());
    }

    @Test
    void shouldGetCategoryBreakdown() throws Exception {
        int currentMonth = LocalDate.now().getMonthValue();
        int currentYear = LocalDate.now().getYear();

        mockMvc.perform(get("/api/analytics/category-breakdown")
                        .header("Authorization", "Bearer " + authToken)
                        .param("month", String.valueOf(currentMonth))
                        .param("year", String.valueOf(currentYear)))
                .andExpect(status().isOk())
                .andExpect(jsonPath("$").isArray())
                .andExpect(jsonPath("$[0].categoryName").exists())
                .andExpect(jsonPath("$[0].totalAmount").exists())
                .andExpect(jsonPath("$[0].expenseCount").exists())
                .andExpect(jsonPath("$[0].percentage").exists());
    }

    @Test
    void shouldGetDailyTrend() throws Exception {
        int currentMonth = LocalDate.now().getMonthValue();
        int currentYear = LocalDate.now().getYear();

        mockMvc.perform(get("/api/analytics/daily-trend")
                        .header("Authorization", "Bearer " + authToken)
                        .param("month", String.valueOf(currentMonth))
                        .param("year", String.valueOf(currentYear)))
                .andExpect(status().isOk())
                .andExpect(jsonPath("$").isMap());
    }

    @Test
    void shouldGetHighestExpense() throws Exception {
        mockMvc.perform(get("/api/analytics/highest-expense")
                        .header("Authorization", "Bearer " + authToken))
                .andExpect(status().isOk())
                .andExpect(jsonPath("$.amount").exists())
                .andExpect(jsonPath("$.description").exists())
                .andExpect(jsonPath("$.categoryName").exists());
    }

    @Test
    void shouldGetSmartInsights() throws Exception {
        mockMvc.perform(get("/api/analytics/insights")
                        .header("Authorization", "Bearer " + authToken))
                .andExpect(status().isOk())
                .andExpect(jsonPath("$.monthlyComparison").exists())
                .andExpect(jsonPath("$.categoryInsights").isArray())
                .andExpect(jsonPath("$.highestExpense").exists())
                .andExpect(jsonPath("$.summary").exists());
    }

    @Test
    void shouldHandleEmptyAnalytics() throws Exception {
        // Register new user with no expenses
        RegisterRequest newUser = new RegisterRequest();
        newUser.setEmail("empty-analytics-" + System.currentTimeMillis() + "@example.com");
        newUser.setPassword("Password123");
        newUser.setFullName("Empty User");

        MvcResult result = mockMvc.perform(post("/api/auth/register")
                        .contentType(MediaType.APPLICATION_JSON)
                        .content(objectMapper.writeValueAsString(newUser)))
                .andReturn();

        AuthResponse auth = objectMapper.readValue(
                result.getResponse().getContentAsString(), AuthResponse.class);

        // Should return empty/zero values, not error
        mockMvc.perform(get("/api/analytics/monthly-summary")
                        .header("Authorization", "Bearer " + auth.getToken())
                        .param("month", "1")
                        .param("year", "2026"))
                .andExpect(status().isOk())
                .andExpect(jsonPath("$.totalExpenses").value(0))
                .andExpect(jsonPath("$.expenseCount").value(0));
    }

    @Test
    void shouldRejectInvalidMonthParameter() throws Exception {
        mockMvc.perform(get("/api/analytics/monthly-summary")
                        .header("Authorization", "Bearer " + authToken)
                        .param("month", "13") // Invalid month
                        .param("year", "2026"))
                .andExpect(status().isBadRequest());
    }

    @Test
    void shouldRejectUnauthorizedAnalyticsAccess() throws Exception {
        mockMvc.perform(get("/api/analytics/monthly-summary")
                        .param("month", "1")
                        .param("year", "2026"))
                .andExpect(status().isUnauthorized());
    }
}
